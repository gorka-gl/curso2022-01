<odoo>
  <data>
    
    <record id="helpdesk_gorka_action_window" model="ir.actions.act_window" >
      <field name="name">Helpdesk Tickets</field>
      <field name="res_model">helpdesk.gorka</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket
            </p>
        </field>
    </record>

    <menuitem name="Helpdesk" id="helpdesk_menu_root" sequence="10"/>
    <menuitem name="Helpdesk" id="helpdesk_menu_child" parent="helpdesk_menu_root"/>
    <menuitem name="Tickets" id="ticket_menu_child" parent="helpdesk_menu_child" action="helpdesk_gorka_action_window"/>

    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.tree</field>
        <field name="model">helpdesk.gorka</field>
        <field name="arch" type="xml">
            <tree string="Tickets">
                <field name="sequence" widget="handle"/>                
                <field name="name"/>
                <field name="user_id"/>
                <field name="date" optional="show"/>
                <field name="datetime" optional="hide"/>
                <field name="state"/>                
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.gorka</field>
        <field name="arch" type="xml">
            <form string="Ticket">         
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>   
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Ticket Name" />
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="main">
                        <group name="user">
                            <field name="user_id"/>
                            <field name="assigned"/>
                        </group>
                        <group name="dates">
                            <field name="date"/>
                            <field name="datetime"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" nolabel="1"/>                        
                            </group>
                        </page>
                        <page string="Acciones por hacer">
                            <group>
                                <field name="actionsHtml" nolabel="1"/>                        
                            </group>
                        </page>
                        <page string="Aciones realizadas">
                            <button string="Review" name="review_actions" type="object" class="btn-primary"/>
                             <group>
                                <field name="action_ids" nolabel="1"/>
                             </group>
                        </page>
                        <page string="Tags">
                             <group>
                                <field name="tag_ids" nolabel="1"/>
                             </group>
                        </page>
                    </notebook>
                </sheet>              
            </form>
        </field>
    </record>



 </data>
</odoo>